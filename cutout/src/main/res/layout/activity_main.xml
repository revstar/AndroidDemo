<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="720.0">

        <ImageView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="100.0"
            android:src="@drawable/placeholder" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="192.0"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_camera_main"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:scaleType="fitEnd"
                android:src="@drawable/main_camera" />

            <TextView
                android:id="@+id/textView_camera_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/fab_margin"
                android:text="@string/camera_btn"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_main" />
        </LinearLayout>

        <ImageView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="136.0"
            android:src="@drawable/placeholder" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="192.0"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_gallery_main"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:scaleType="fitEnd"
                android:src="@drawable/main_gallery" />

            <TextView
                android:id="@+id/textView_gallery_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/fab_margin"
                android:text="@string/gallery_btn"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_main" />
        </LinearLayout>

        <ImageView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="100.0"
            android:src="@drawable/placeholder" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_cat_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitEnd"
        android:src="@drawable/main_cat" />
</RelativeLayout>