<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/relativeLayout_cut"    android:layout_width="fill_parent"    android:layout_height="fill_parent"    android:background="@color/colorGrey">    <ImageView        android:id="@+id/imageView_image_cut"        android:layout_width="fill_parent"        android:layout_height="200.0dip"        android:layout_above="@id/linearLayout_buttons_cut"        android:layout_alignParentTop="true"        android:layout_centerHorizontal="true"        android:contentDescription="@string/title_cut" />    <LinearLayout        android:id="@+id/linearLayout_buttons_cut"        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:layout_centerHorizontal="true"        android:background="@color/colorAccent"        android:orientation="horizontal"        android:weightSum="2.0">        <Button            android:id="@+id/button_back_cut"            android:layout_width="0.0dip"            android:layout_height="@dimen/buttons_height"            android:layout_weight="1.0"            android:background="@drawable/placeholder"            android:text="@string/redo_cut"            android:textColor="@color/colorWhite" />        <View            android:layout_width="1.0dip"            android:layout_height="@dimen/buttons_line"            android:layout_gravity="center_vertical"            android:background="@color/colorAccentLight" />        <Button            android:id="@+id/button_next_cut"            android:layout_width="0.0dip"            android:layout_height="@dimen/buttons_height"            android:layout_weight="1.0"            android:background="@drawable/placeholder"            android:text="@string/continue_cut"            android:textColor="@color/colorWhite" />    </LinearLayout></RelativeLayout>